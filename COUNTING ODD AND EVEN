#include<stdio.h>
int main()
{
	int A[10],i,n,odd_count,even_count;
	
	printf("enter the number:");
	scanf("%d",&n);
	
	printf("enter the array elements:");
	 for(i=0;i<n;i++)
	 scanf("%d",&A[i]);
	 
	 odd_count=0;
	 even_count=0;
	 
	 for(i=0;i<n;i++)
	{
	
	 	if(A[i]%2==1)
	 	 odd_count++;
	 	 else
	 	 even_count++;
	}
	 printf("\n the odd_count = %d",odd_count);
	 printf("\n the even_count = %d",even_count);
	 return 0;
}
